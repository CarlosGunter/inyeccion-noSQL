---
import background from '../assets/background.svg';
import Content from '@/components/Content';
---

<div>
	<img class="background" src={background.src} alt="" fetchpriority="high" />
	
	<div class="grid place-items-center h-screen">
		<Content client:load />
	</div>

</div>

<style>
	.background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
	}
</style>